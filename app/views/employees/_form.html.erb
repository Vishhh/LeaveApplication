<%= simple_form_for @employee do |f| %>
<section>
  <div class= "col-md-10">
    <div class="panel panel-primary">
      <div class="panel-body">        
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <%if current_user%>
              <th>Password</th>
              <th>Salary</th>
              <%end%>
              
              <th>Primary No</th>
              <th>Secondary No</th>
              <th>Local Address</th>
              <th>Permanent Address</th>
            </tr>
          </thead>
          <tbody id="tbody">
            <tr>
              <td>
                <%= f.text_field :name, :class => 'form-control'%>       
              </td>
              <td>
                <%= f.text_field :email, :class => 'form-control'%>       
              </td>
               <%if current_user%>
              <td>
                <%= f.password_field :password, :class => 'form-control'%>       
              </td>
              <td>
                <%= f.text_field :salary, :class => 'form-control'%>       
              </td>
              <%end%>
              
              <td>
                <%= f.text_field :mobile_no1, :class => 'form-control'%>       
              </td>
              <td>
                <%= f.text_field :mobile_no2, :class => 'form-control'%>       
              </td>
              <td>
                <%= f.text_field :local_address, :class => 'form-control'%>       
              </td>
              <td>
                <%= f.text_field :permanent_address, :class => 'form-control'%>       
              </td>
            </tr>
          </tbody> 
        </table>
        <%= f.input :avatar, as: :file %><br/><br/><br/>        
        <div class="text-center invoice-btn">
          <%= f.submit 'Apply', :class => 'btn btn-success btn-lg' %>
        </div>
      </div>
    </div>
  </div>
</section>
<% end %>

