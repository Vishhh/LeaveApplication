<%= simple_form_for @hardware do |f| %>
<section>
  <div class= "col-md-10">
    <div class="panel panel-primary">
      <div class="panel-body">
        <div class="row invoice-list">
          <div class="col-md-3 form-group pull-right">
            <label class= "control-label">Hardware Number</label>
            <%= f.text_field :hardware_number, :class =>"form-control" %>
          </div>
        </div>
        
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Model No</th>
              <th>Name</th>
              <th>Description</th>
              <th>brand</th>
              <th>Purchase Date</th>
              <th>Token No</th>
            </tr>
          </thead>
          <tbody id="tbody">
            <tr>
              <td>
                <%= f.text_field :model_no, :class => 'form-control'%>       
              </td>
              <td>
                <%= f.text_field :name, :class => 'form-control'%>       
              </td>
              <td>
                <%= f.text_field :description, :class => 'form-control'%>       
              </td>
              <td>
                <%= f.text_field :brand, :class => 'form-control'%>       
              </td>
              <td >
                <%= f.input :to, :class => 'form-control'%>
              </td>
              <td>
                <%= f.text_field :token_no, :class => 'form-control'%>       
              </td>
            </tr>
          </tbody> 
        </table><br/><br/><br/>          
        <div class="text-center invoice-btn">
          <%= f.submit 'Apply', :class => 'btn btn-success btn-lg' %>
        </div>
      </div>
    </div>
  </div>
</section>
<% end %>
