
<%= simple_form_for @salary do |f| %>

<% if @salary.errors.any? %>
  <ul>
    <% @salary.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<section>
  <div class= "col-md-10">
    <div class="panel panel-primary">
      <div class="panel-body"> 
        <div class="row invoice-list">
          <div class="col-md-3 form-group pull-right">
          <label class= "control-label">Salary Number</label>
          <%= f.text_field :salary_number, :class =>"form-control" %>
        </div>
      </div>       
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Month</th>
              <th>Year</th>
              <th>Working Days</th>
            
            </tr>
          </thead>
          <tbody id="tbody">
            <tr>
              <td><%= select_month(Date.today, {}, name: 'salary[month]')%>    
              </td>
              <td>
                <%= f.select :year, Date.today.year.. 8.years.from_now.year %>      
              </td>
              <td>
                <%= f.input :working_days, :class => 'form-control'%>
              </td> 
            </tr>
          </tbody> 
        </table><br/><br/><br/>          
        <div class="text-center invoice-btn">
          <%= f.submit 'Apply', :class => 'btn btn-success btn-lg' %>
        </div>
      </div>
    </div>
  </div>
</section>
<% end %>