<%= simple_form_for @salary do |f| %>
<section>
  <div class= "col-md-10">
    <div class="panel panel-primary">
      <div class="panel-body">        
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Month</th>
              <th>Year</th>
              <th>Working Days</th>
            
            </tr>
          </thead>
          <tbody id="tbody">
            <tr>
              <td>
                <%= f.text_field :month, :class => 'form-control'%>       
              </td>
              <td>
                <%= f.text_field :year, :class => 'form-control'%>       
              </td>
              <td>
                <%= f.input :working_days, :class => 'form-control'%>       
              </td>
              
              
            </tr>
          </tbody> 
        </table><br/><br/><br/>          
        <div class="text-center invoice-btn">
          <%= f.submit 'Apply', :class => 'btn btn-success btn-lg' %>
        </div>
      </div>
    </div>
  </div>
</section>
<% end %>