<div class ="col-md-10">
	<table class="display table table-bordered table-striped">
		<thead>
			<tr>
			<% if current_user%>
				<th>Employee Name</th>
			<%elsif current_employee %>
				<th>Leave Added </th>
			<%end%>
				<th>Leave From</th>
				<th>Leave To</th>
				<th>Description</th>
				<th>Status</th>
				<th>Action</th>
				<% if current_user%>
				<th>Approve</th>
				<th>Reject</th>
				<%end%>
			</tr>
		</thead> 
		<tbody>
			<% @leaves.each do |leave| %>
			<tr>
				<% if current_user %><td>	
					<%= leave.employee.name %>
					<div id = "admin_tag">
						<% if leave.employee_id == nil%>
							<%= "Admin"%>
						<% end%>
					</div>
				</td>
				<%else%>
				<td>
				<div id = "holiday_tag">
						<% if leave.employee_id == nil%>
							<%= "Holiday"%>
						<% end%>
					</div>
				</td>
				<% end %>
				<td><%= leave.leave_from %></td>
				<td><%= leave.leave_to %></td>
				<td><%= leave.task %></td>

				<td>
				<% if leave.status == "Approve" %>
					<div class ="btn btn-info btn-xs"><%= leave.status %>
				<%elsif leave.status == "Reject"%>
					<div class ="btn btn-danger btn-xs"><%= leave.status %>
				<% else %>
				<div class ="btn btn-primary btn-xs"><%= leave.status = "Pending"%>
				</div>
				<%end%>
				</td>
				
		<td>
			<%= link_to leafe_path(leave), :class => "btn btn-primary btn-xs" do %>
			  <i class="fa fa-folder"></i> View
			<% end %>
			<% if current_user %>
				<%= link_to edit_leafe_path(leave), :class => "btn btn-info btn-xs" do %><i class="fa fa-pencil"></i> Edit
				<% end %><td>
				<%= form_for leave, url:  approve_leafe_path(leave)  do  |f|%>
					<%= f.submit "Approve",:class => "btn btn-success btn-xs", :value => 'Approve'%>
				<% end %></td><td>
				<%= form_for leave,  url:  reject_leafe_path(leave) do  |t|%>
					<%= t.submit "Reject",:class => "btn btn-danger btn-xs", :value => 'Reject'%>
				<% end %></td>
			<%end%>
		</td>
	
</tr>
			<% end %>
		</tbody>

	</table>
	<%#=  @leaves %>
</div>