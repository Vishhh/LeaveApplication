<div class="container">
  <%= form_for(resource, :html => {:class => 'form-signin'}, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
    <h2 class="form-signin-heading">Register</h2>
    <div class="login-wrap">
        <p>Enter your details below</p>
        
        <%= f.email_field :email, :class => 'form-control', :placeholder => 'Email' %>
        <%= f.password_field :password, autocomplete: "off", :class => 'form-control', :placeholder => 'Password' %>
        <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control', :placeholder => 'Re-type Password' %>

        <%= f.submit "Sign up", :class => 'btn btn-lg btn-login btn-block' %>

        <div class="registration">
            Already Registered.
            <%= link_to "Log in", new_session_path(resource_name) %>
        </div>

    </div>
  <% end %>
</div>